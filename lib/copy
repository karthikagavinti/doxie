import 'package:flutter/material.dart';
import 'package:doxie/home_screen.dart';
import 'package:doxie/screens/previous.dart'; // Import the History screen

class CustomDrawer extends StatelessWidget {
  const CustomDrawer({super.key});

  @override
  Widget build(BuildContext context) {
    return Drawer(
      backgroundColor: Colors.lightBlue,
      child: Column(
        children: [
          DrawerHeader(
            decoration: BoxDecoration(
              gradient: LinearGradient(
                colors: [
                  Colors.lightBlue,
                  Color.fromARGB(255, 163, 20, 20),
                ],
                begin: Alignment.topLeft,
                end: Alignment.bottomRight,
              ),
            ),
            child: Row(
              children: [
                const CircleAvatar(
                  radius: 40,
                  backgroundColor: Colors.white,
                  child:
                      Icon(Icons.person, size: 48, color: Colors.purpleAccent),
                ),
                const SizedBox(width: 20),
                Column(
                  mainAxisAlignment: MainAxisAlignment.center,
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: const [
                    Text(
                      'Welcome,',
                      style: TextStyle(
                        color: Colors.white70,
                        fontSize: 18,
                      ),
                    ),
                    Text(
                      'Doxie User!',
                      style: TextStyle(
                        color: Colors.white,
                        fontSize: 24,
                        fontWeight: FontWeight.bold,
                        letterSpacing: 1,
                      ),
                    ),
                  ],
                ),
              ],
            ),
          ),
          Expanded(
            child: ListView(
              padding: EdgeInsets.all(8), // Ensure no padding
              children: [
                buildDrawerItem(context, Icons.home, 'Home', Colors.blue, () {
                  Navigator.pop(context); // Close the drawer
                  Navigator.pushReplacement(
                      context, _createRoute(const HomeScreen()));
                }),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.search, 'Search', Colors.green, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.picture_as_pdf, 'Previous', Colors.orange,
                    () {
                  Navigator.push(context, _createRoute(History()));
                }),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.voice_chat, 'Voice', Colors.red, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(context, Icons.group, 'Invite Friends',
                    Colors.purple, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.settings, 'Settings', Colors.teal, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.star, 'Favorites', Colors.yellow, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(context, Icons.notifications, 'Notifications',
                    Colors.indigo, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.feedback, 'Feedback', Colors.brown, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.rate_review, 'Rate App', Colors.pink, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.info, 'About Us', Colors.cyan, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(context, Icons.privacy_tip, 'Privacy Policy',
                    Colors.lime, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(context, Icons.gavel, 'Terms & Conditions',
                    Colors.deepPurple, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(context, Icons.language, 'Language',
                    Colors.orangeAccent, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(context, Icons.help, 'Help & Support',
                    Colors.lightGreen, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(context, Icons.question_answer, 'FAQ',
                    Colors.redAccent, () {}),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.dark_mode, 'Dark Mode', Colors.blueAccent,
                    () {
                  // Toggle Dark Mode
                }),
                SizedBox(height: 1.5),
                buildDrawerItem(
                    context, Icons.exit_to_app, 'Sign out', Colors.grey, () {}),
              ],
            ),
          ),
          Container(
            padding: const EdgeInsets.symmetric(vertical: 16),
            color: Colors.blueGrey,
            child: Center(
              child: Text(
                'Version 3.0.5',
                style: TextStyle(fontSize: 16, color: Colors.white),
              ),
            ),
          ),
        ],
      ),
    );
  }

  Widget buildDrawerItem(BuildContext context, IconData icon, String title,
      Color backgroundColor, VoidCallback onTap) {
    return ListTile(
      leading: RoundedIcon(
        icon: icon,
        color: Colors.white,
        backgroundColor: backgroundColor,
      ),
      title: Text(
        title,
        style: TextStyle(
          color: Theme.of(context).colorScheme.onBackground,
          fontSize: 18,
          fontWeight: FontWeight.w500,
        ),
      ),
      onTap: onTap,
      shape: RoundedRectangleBorder(
        borderRadius: BorderRadius.circular(16),
      ),
      tileColor: Color.fromARGB(255, 51, 102, 131),
      contentPadding: const EdgeInsets.symmetric(horizontal: 16, vertical: 4),
      trailing:
          const Icon(Icons.arrow_forward_ios, size: 16, color: Colors.grey),
    );
  }

  Route _createRoute(Widget page) {
    return PageRouteBuilder(
      pageBuilder: (context, animation, secondaryAnimation) => page,
      transitionsBuilder: (context, animation, secondaryAnimation, child) {
        const begin = Offset(-1.0, 0.0); // Slide in from left
        const end = Offset.zero;
        const curve = Curves.ease;

        var tween =
            Tween(begin: begin, end: end).chain(CurveTween(curve: curve));

        return SlideTransition(
          position: animation.drive(tween),
          child: child,
        );
      },
    );
  }
}

class RoundedIcon extends StatelessWidget {
  final IconData icon;
  final Color color;
  final Color backgroundColor;

  const RoundedIcon(
      {required this.icon,
      required this.color,
      required this.backgroundColor,
      super.key});

  @override
  Widget build(BuildContext context) {
    return Container(
      padding: const EdgeInsets.all(8.0),
      decoration: BoxDecoration(
        color: backgroundColor,
        shape: BoxShape.circle,
      ),
      child: Icon(icon, color: color),
    );
  }
}
